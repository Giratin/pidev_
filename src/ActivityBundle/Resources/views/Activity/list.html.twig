{% extends "base.html.twig" %}
{% block body %}

    <div>
    <form action="{{ path('list_activity') }}" method="get">
        <label for="filter" style="margin-top: 40px;margin-top: 40px;margin-left: 40px">Filter</label>
        <input name="filter" type="text">
        <button type="submit" class="btn btn-default btn-sm">Filter Results</button>
    </form>
    </div>

    <div class="container" style="margin-top: 40px; margin-bottom: 50px">
        <div class="row"  style="margin-top: 40px">



    {% for article in pagination %}
        <div class="col-md-3" style="height: 500px; border: 1px solid #ccc; padding: 10px 10px; border-radius: 5px; margin-right: 70px">
            <div class="ftb-item item_2">
        <figure><img  style="height: 200px" src="{{ asset('uploadsuploadsuploads/'~(article.imagactivity) ) }}" >
            <figcaption>
                <a data-rel="prettyPhoto[]" class="like-icon icon_2" href="images/ftb-item4.png" ><i class="fa fa-eye"></i></a>
                <a class="like-icon icon_2 right" href="#"><i class="fa fa-heart"></i></a>
            </figcaption>
        </figure>
        <div class="text text_3 text_4">
            <h4>
                <b> <a href="#" style="font-size: 12px;color: #cc4400"> {{ article.typeactivite.typeName }}</a></b> </h4>

            <a href="#" style="font-size: 12px; color: #0b0b0b"> {{ article.description }}</a></br>
            <a target="_blank" href="https://maps.google.com/?q={{ article.adresseactivite }}"><span style="font-size: 18px"><i class="fa fa-map-marker"></i> View On Google Maps</span></a>
            <div class="clear" style="color: #761c19"></div>
            <div class="rating rating_3" style="color: #0d6aad">

            </div>
        </div>
        </div>
        </div>
    {% endfor %}
        </div>
    </div>
    <!--// Contact Footer //-->
    <!--// FOOTBALL ITEM //-->

    <div class="kode_blog_pagination">
        {# display navigation #}
        <div class="navigation" style="margin-left: 500px; margin-bottom: 50px">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>

{% endblock %}