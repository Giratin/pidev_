{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .btn-product{
            width: 100%;
        }
    </style>
    <div class="container" style="padding-bottom: 30px">
        <div class="row" style="margin-top: 20px">
            <div class="col-lg-9"></div>
            <div class="col-lg-3">
                <input type="text" class="form-control" style="margin-bottom: 5px" placeholder="Type destination here ...">
                <input type="submit" style="float: right; width: 120px" class="btn btn-warning" value="search">
            </div>
        </div>
        <div class="row">
            {% for m in randonnes %}
                <div class="col-md-1" ></div>
                <div style="border: 1px solid #ccc; border-radius: 5px; margin-top: 30px; padding-bottom: 10px" class="col-md-3">
                    <div class="thumbnail" >
                        <h4 class="text-center">
                            <span class="label label-info" >Destination</span>
                            {{ m.destination}}
                        </h4>
                        <img src="http://placehold.it/650x450&text=Galaxy S5" class="img-responsive">
                        <div class="caption">
                            <div class="row">
                                <div class="col-md-1"></div>
                                <h3>
                                    <label>Price</label>
                                    {{ m.prixPersonne}}
                                </h3>

                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> View</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>

        <div style="margin-left: 40%; margin-top: 20px">
            {{ knp_pagination_render(randonnes) }}
            {% for n in num %}
                <p style="margin-left: 20%; margin-top: 5px">{{ n.nm }} result(s) found </p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
