{% extends 'base.html.twig' %}


{% block body %}
    <style>
        .btn-product{
            width: 100%;
        }
    </style>
<div class="container" style="padding-bottom: 30px">
    <div class="row" style="margin-top: 20px">
        <div class="col-lg-9"></div>
        <div class="col-lg-3">
            <input type="text" class="form-control" style="margin-bottom: 5px" placeholder="Type destination here ...">
            <input type="submit" style="float: right; width: 120px" class="btn btn-warning" value="search">
        </div>
    </div>
    <div class="row">
    {% for m in randonnes %}
            <div class="col-md-1" ></div>
            <div style="border: 1px solid #ccc; border-radius: 5px; margin-top: 30px; padding-bottom: 10px" class="col-md-3">
                <div class="thumbnail" >
                    <h4 class="text-center">
                        <span class="label label-info" >Destination</span>
                        {{ m.destination}}
                    </h4>
                    <img src="http://placehold.it/650x450&text=Galaxy S5" class="img-responsive">
                    <div class="caption">
                        <div class="row">
                            <div class="col-md-1"></div>
                                <h3>
                                    <label>Price</label>
                                    {{ m.prixPersonne}}
                                </h3>

                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <a class="btn btn-primary btn-product"><span class="glyphicon glyphicon-thumbs-up"></span> View</a>
                            </div>
                            <div class="col-md-6">
                                <a href="#" class="btn btn-success btn-product"><span class="glyphicon glyphicon-shopping-cart"></span> Enroll</a></div>
                        </div>
                    </div>
                </div>
            </div>
    {% endfor %}
        </div>

    <div style="margin-left: 40%; margin-top: 20px">{{ knp_pagination_render(randonnes) }}</div>
    </div>

{% endblock %}
